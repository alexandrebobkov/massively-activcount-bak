{{!< default}}

{{#post}}
{{!-- QuickBooks Online Tips & Tricks page template --}}
{{!-- Everything inside the #post tags pulls data from the page --}}

<main id="main">
    <section class="post">

        <header id="pg-header" class="row">
            <div class="col-6">
                {{#if feature_image}}
                    <figure class="image main">
                        <img src="{{img_url feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
                    </figure>
                {{/if}}
	        </div>
            <div class="col-6">
                <h2>{{title}}</h2>
                {{#primary_tag}}
                    <p style="font-style:italic;">
                        {{name}}
                    </p>
                    <p>
                        {{description}}
                    </p>
                {{/primary_tag}}
                
            </div>
        </header>

        <div class="content">
            {{content}}
        </div>

        {{#get "posts" limit="all" filter="tags:qbo_tips"}}
        {{#foreach posts}}            
            <div class="content">
                <h2><a href="{{url}}">
                    {{title}}
                    </a>
                </h2>
                <figure class="image main">
                 <img src="{{img_url feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
                </figure>
                {{excerpt}}
            </div>
        {{/foreach}}
        {{/get}}

    </section>
</main>

{{/post}}
